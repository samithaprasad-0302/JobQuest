# Database Configuration (Currently using MySQL, MongoDB URI is for future reference)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobquest

# JWT Secret
# Generate a strong random string using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_generate_a_strong_random_string

# Server Configuration
PORT=5000
NODE_ENV=production

# Client URL
CLIENT_URL=https://yourdomain.com

# Email Configuration (for future use)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Social Auth (for future OAuth integration)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret

# LINKEDIN_CLIENT_ID=your-linkedin-client-id
# LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret
